<archetype-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="JavaCourses WEB Project Template" partial="false">
    <requiredProperties>
        <requiredProperty key="package">
            <defaultValue>javacourses</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>boundary/GreetingBoundary.java</include>
                <include>entity/Greeting.java</include>
            </includes>
            <excludes/>
        </fileSet>
        <fileSet filtered="false" packaged="false" encoding="UTF-8">
            <directory>src/main/resources/META-INF</directory>
            <includes>
                <include>load.sql</include>
            </includes>
            <excludes/>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/main/resources/META-INF</directory>
            <includes>
                <include>persistence.xml</include>
            </includes>
            <excludes/>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/main/webapp/WEB-INF</directory>
            <includes>
                <include>jboss-web.xml</include>
            </includes>
            <excludes/>
        </fileSet>
        <fileSet filtered="false" packaged="false" encoding="UTF-8">
            <directory>src/main/webapp/WEB-INF</directory>
            <includes>
                <include>beans.xml</include>
                <include>faces-config.xml</include>
                <include>web.xml</include>
            </includes>
            <excludes/>
        </fileSet>
        <fileSet filtered="false" packaged="false" encoding="UTF-8">
            <directory>src/main/webapp</directory>
            <includes>
                <include>template.xhtml</include>
                <include>index.xhtml</include>
                <include>greeting.xhtml</include>
            </includes>
            <excludes/>
        </fileSet>
    </fileSets>

</archetype-descriptor>
